{
    "version": 2,
    "builds": [
      { 
        "src": "api/*.py",
        "use": "@vercel/python"
      },
      { 
        "src": "frontend/package.json", 
        "use": "@vercel/next"
      }
    ],
    "routes": [
      {
        "src": "/api/test",
        "dest": "/api/test.py"
      },
      {
        "src": "/api/chat",
        "dest": "/api/chat.py"
      },
      {
        "src": "/api/config",
        "dest": "/api/config.py"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/$1"
      }
    ],
    "env": {
      "PYTHONUNBUFFERED": "1"
    }
} 