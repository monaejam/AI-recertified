{
    "version": 2,
    "builds": [
      { 
        "src": "api/app.py",
        "use": "@vercel/python"
      },
      { 
        "src": "frontend/package.json", 
        "use": "@vercel/next"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/app.py"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/$1"
      }
    ],
    "env": {
      "PYTHONUNBUFFERED": "1"
    }
} 